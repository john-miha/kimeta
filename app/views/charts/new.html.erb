
<div class="bg-warning p-3 p-sm-3 my-4 rounded">
  <div class="text-left text-white">
    <h1>比較表新規作成ページ</h1>
  </div>
</div>
<%= form_with(model: @chart) do |f| %>
    <%= f.label :title, "名前" %>
    <%= f.text_field :title, :placeholder => "比較表のタイトルを入力"  %><br>
    <%= f.label :description, "説明" %>
    <%= f.text_field :description, :placeholder => "比較表の説明を入力" %><br>

    <%#ここからEvaluationの初期化処理%>
    <table class="table">
      <thead>
        <tr>
          <th>観点</th>
          <th>
            <%= f.label :itemname, "1" %>
            <%= text_field_tag 'itemnames[]',"", placeholder: "比較するアイテムを入力" %>
          </th>
          <th>
            <%= f.label :itemname, "2" %>
            <%= text_field_tag 'itemnames[]',"",  placeholder: "比較するアイテムを入力" %><br>
          </th>
          <th>
            <%= f.label :itemname, "3" %>
            <%= text_field_tag 'itemnames[]',"",  placeholder: "比較するアイテムを入力" %><br>
          </th>
          <th>
            MyBEST
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= f.label :viewpointname, "1" %>
            <%= text_field_tag 'viewpointnames[]',"",  placeholder: "比較する観点を入力" %>
          </td>
          <% for id in 0..2 do %>
            <td>
              <%= f.label :score, "Score" + id.to_s %>
              <%#= text_field_tag 'evaluationscores[]' %>
              <select name="evaluationscores[]">
                <option value=1>1</option>
                <option selected="selected" value=2>2</option>
                <option value=3>3</option>
              </select>
              <br>
              <%= f.label :comment, "Comment" + id.to_s %>
              <%= text_field_tag 'evaluationcomments[]',"",  placeholder: "任意入力" %><br>
            </td>
          <% end %>
          <td>
            radio-button
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :viewpointname, "2" %>
            <%= text_field_tag 'viewpointnames[]',"",  placeholder: "比較する観点を入力" %>
          </td>
          <% for id in 3..5 do %>
            <td>
              <%= f.label :score, "Score" + id.to_s %>
              <%#= text_field_tag 'evaluationscores[]' %>
              <select name="evaluationscores[]">
                <option value=1>1</option>
                <option selected="selected" value=2>2</option>
                <option value=3>3</option>
              </select>
              <br>
              <%= f.label :comment, "Comment" + id.to_s %>
              <%= text_field_tag 'evaluationcomments[]',"",  placeholder: "任意入力" %><br>
            </td>
          <% end %>
          <td>
            radio-button
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :viewpointname, "3" %>
            <%= text_field_tag 'viewpointnames[]',"",  placeholder: "比較する観点を入力" %>
          </td>
          <% for id in 6..8 do %>
            <td>
              <%= f.label :score, "Score" + id.to_s %>
              <%#= text_field_tag 'evaluationscores[]' %>
              <select name="evaluationscores[]">
                <option value=1>1</option>
                <option selected="selected" value=2>2</option>
                <option value=3>3</option>
              </select>
              <br>
              <%= f.label :comment, "Comment" + id.to_s %>
              <%= text_field_tag 'evaluationcomments[]',"",  placeholder: "任意入力" %><br>
            </td>
          <% end %>
          <td>
            radio-button
          </td>
        </tr>
      </tbody>
    </table>
    
    <%= f.submit 'submit' %>
<% end %>

  
<%= link_to '一覧に戻る', charts_path ,class: "btn btn-primary"%>